<%= form_for(@quote, html: { class: "form-horizontal", role: "form" }) do |f| %>

  <%# Alert showing errors for this form %>
  <% if @quote.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@quote.errors.count, "error") %> prohibited this quote from being saved:</h4>

      <ul>
      <% @quote.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%# quote %>
  <div class="form-group">
    <%= f.label :quote, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_area :quote, class: "form-control" %>
    </div>
  </div>


  <%# author %>
  <div class="form-group">
    <%= f.label :author, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :author, class: "form-control" %>
    </div>
  </div>


  <%# category %>
  <div class="form-group">
    <%= f.label :category, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.select :category, options_for_select([['Select One', 'Select One'], ['Affirmation', 'Affirmation'], ['Spiritual', 'Spiritual'], ['Inspirational', 'Inspirational'], ['Sports', 'Sports'], ['Historical', 'Historical'], ['Miscellaneous', 'Miscellaneous']]), class: "form-control" %>
    </div>
  </div>


  <%# Submit %>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end -%>
