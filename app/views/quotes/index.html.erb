<div class="page-header add-new">
  <%= link_to new_quote_path, class: 'btn btn-primary but-wide' do %>
    <span class="add-quote"></span>
    Add New Quote
  <% end %>
</div>

<div class="table-responsive{-sm|-md|-lg|-xl}">
  <table class="table table-hover qtable">
    <thead>
      <tr>
        <th>Quote</th>
        <th>Author</th>
        <th>Category</th>
        <th colspan="2"></th>
      </tr>
    </thead>

    <tbody class="table-body qlink">
      <%- @quotes.each do |quote| %>
      <tr>
        <td>
          <%= link_to quote do %>
            "<%= quote.quote.truncate(15) %>"
          <% end %>
        </td>
        <td>
          <%= link_to quote do %>
            <%= quote.author %>
          <% end %>
        </td>
        <td>
          <%= link_to quote do %>
            <%= quote.category %>
          <% end %>
        </td>
        <td>
          <%= link_to edit_quote_path(quote) do %>
            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
          <% end %>
        </td>
        <td>
          <%= link_to quote, method: :delete, data: { confirm: 'Are you sure?' } do %>
            <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
          <% end %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <% if @quotes.blank? %>
    <h4>There are no quotes containing the term <%= params[:search] %>.</h4>
  <% end %>
</div>
